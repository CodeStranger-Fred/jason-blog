{
    "name": "recognition-api-mvp",
    "version": "1.0.0",
    "description": "Employee Recognition System - 3-Day MVP",
    "main": "dist/server.js",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "nodemon --exec ts-node src/server.ts",
        "build": "tsc",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:utils": "jest src/__tests__/utils/",
        "test:edge-cases": "jest src/__tests__/utils/edgeCases.test.ts",
        "db:setup": "psql $DATABASE_URL -f database/schema.sql",
        "db:reset": "psql $DATABASE_URL -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;' && npm run db:setup"
    },
    "dependencies": {
        "@graphql-tools/schema": "^9.0.0",
        "apollo-server-core": "^3.12.0",
        "apollo-server-express": "^3.12.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "graphql": "^16.6.0",
        "graphql-subscriptions": "^2.0.0",
        "graphql-ws": "^5.16.2",
        "jsonwebtoken": "^9.0.0",
        "pg": "^8.8.0",
        "ws": "^8.12.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.0",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/node": "^18.15.0",
        "@types/pg": "^8.6.6",
        "@types/ws": "^8.5.4",
        "jest": "^29.5.0",
        "nodemon": "^2.0.22",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.0"
    }
}
